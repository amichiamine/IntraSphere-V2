# Configuration Base de Données IntraSphere PHP
# Copiez ce fichier vers .env et modifiez les valeurs

# Type de base de données (mysql ou pgsql)
DB_DRIVER=mysql

# Serveur de base de données
DB_HOST=localhost
DB_PORT=3306

# Nom de la base de données
DB_NAME=intrasphere

# Identifiants de connexion
DB_USER=your_username
DB_PASSWORD=your_password

# Configuration application
APP_ENV=production
SESSION_SECRET=your_long_random_secret_key_here

# Configuration email (optionnel)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Configuration uploads (optionnel)
UPLOAD_MAX_SIZE=10M
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,gif,pdf,doc,docx