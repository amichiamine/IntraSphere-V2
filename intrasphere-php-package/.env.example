# Configuration IntraSphere
# Copiez ce fichier vers .env et configurez vos valeurs

# Environnement
APP_ENV=production
APP_KEY=your-secret-app-key-here
APP_DEBUG=false

# Base de données
DB_DRIVER=mysql
DB_HOST=localhost
DB_PORT=3306
DB_NAME=intrasphere
DB_USER=your-db-username
DB_PASSWORD=your-db-password

# Session
SESSION_NAME=INTRASPHERE_SESSION
SESSION_LIFETIME=3600

# Sécurité
BCRYPT_COST=12

# Upload
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,doc,docx,jpg,jpeg,png,gif

# Logs
LOG_ENABLED=true
LOG_LEVEL=INFO

# Cache
CACHE_ENABLED=true
CACHE_TTL=3600